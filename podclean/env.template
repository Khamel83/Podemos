# server
PODCLEAN_BASE_URL=https://your-host.example
PODCLEAN_BIND=0.0.0.0
PODCLEAN_PORT=8080
PODCLEAN_SECRET_TOKEN=change_me

# performance
MAX_PARALLEL_DOWNLOADS=3
MAX_PARALLEL_TRANSCRIBE=2

# fast pass transcription
FAST_MODEL=small    # faster-whisper/whisper.cpp equivalent
FAST_VAD=true
FAST_BEAM=1
FAST_WORD_TS=true

# full pass transcription
FULL_MODEL=medium
FULL_VAD=true
FULL_BEAM=2
FULL_WORD_TS=true

# encoding
TARGET_CODEC=mp3
TARGET_BITRATE=v4     # or 96k for Opus
PADDING_SECONDS=8
MIN_CONFIDENCE=0.70

# feed
MAX_FEED_ITEMS=500
